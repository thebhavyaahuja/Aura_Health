# === Shared Environment Variables for Docker Deployment ===
# Copy this file to .env and update with your actual values

# === Authentication ===
JWT_SECRET=your-secret-key-change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === AI/ML API Keys ===
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# === Model Configuration ===
HUGGINGFACE_MODEL_REPO=ishro/biogpt-aura
USE_HUGGINGFACE_MODEL=true

# === CORS Configuration ===
CORS_ORIGINS=*

# === Logging ===
LOG_LEVEL=INFO

# === Frontend Environment (Next.js) ===
NEXT_PUBLIC_API_URL=http://localhost:8010
NEXT_PUBLIC_AUTH_URL=http://localhost:8010
NEXT_PUBLIC_INGESTION_URL=http://localhost:8001
NEXT_PUBLIC_PARSING_URL=http://localhost:8002
NEXT_PUBLIC_STRUCTURING_URL=http://localhost:8003
NEXT_PUBLIC_RISK_URL=http://localhost:8004
